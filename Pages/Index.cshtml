		<script>
			function addToCart() {
				var itemImage = document.querySelector('.box img').src;
				var itemName = document.querySelector('.box h3').textContent;
				var itemPrice = document.querySelector('.box span').textContent;

				var cartItem = {
					image: itemImage,
					name: itemName,
					price: itemPrice
				};

				alert('Item added to cart!');

				cartItems.push(cartItem);
				localStorage.setItem('cartItems', JSON.stringify(cartItems)); // 存储购物车物品到本地存储

				window.location.href = '@Url.Action("Cart", "ControllerName")'; // 重定向到购物车页面
			}
