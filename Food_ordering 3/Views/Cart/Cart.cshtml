@{
}
@model List<CartItem>

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your shopping cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product</td>
                    <td>@item.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total: @Model.Sum(item => item.Price).ToString("C")</p>
}
